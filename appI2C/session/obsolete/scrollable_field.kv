<ScrollableField>:
    cols: 1

    ScrollView:
        scroll_type: ['bars']
        bar_width: 10
        BoxLayout:
            id: scroll_layout
            orientation: 'vertical'
            size_hint_y: None
            spacing: 5
            height: self.minimum_height
            Button:
                text: text
                background_color: [0, 0, 0, 0]
                on_press: root.go_to_session_menu()
            Button:
                text: 'Delete'
                on_press: root.delete_session_in_overview_screen(instance, session_name)

    BoxLayout:
        id: layout
        orientation: 'vertical'
        Label:
            id: session_label
            text: ''
            color: [1, 0, 0, 1]
            size_hint: [None, None]
            size: [300, 50]
            pos: [800, 550]

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        spacing: 5
        TextInput:
            id: input_field
            multiline: False
            on_text_validate: root.on_enter(input_field, scroll_layout, session_label)
        Button:
            text: 'Create'
            on_press: root.create_session(input_field, scroll_layout, session_label)
